<div class="container">
  <header>
    <h1><a href="/posts">Postter</a></h1>
    <%= link_to 'New Post', new_post_path %>
  </header>

  <div class="main">
    <p id="notice"><%= notice %></p>
    <table>
      <thead>
        <tr>
          <th>User</th>
          <th>Posts</th>
          <th colspan="3">Command</th>
        </tr>
      </thead>

      <tbody>
        <% @posts.each do |post| %>
          <tr class="tweet">
            <td class="icon">icon</td>
            <td class="post"><%= post.content %></td>
            <td class="command"><%= link_to 'Show', post_path(post) %></td>
            <td class="command"><%= link_to 'Edit', edit_post_path(post), data: { confirm: 'Are you sure edit?'} %></td>
            <td class="command"><%= link_to 'Destroy', post_path(post), method: :delete, data: { confirm: 'Are you sure delete?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <br>
  </div>
    <footer>
      <p>Copyright Â© 2021 WEF2101 Kajiyama Yuuki.</p>
    </footer>
</div>
